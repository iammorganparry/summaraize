{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "files": {
    "ignore": [
      "dist/**",
      "node_modules/**",
      "package-lock.json",
      "yarn.lock",
      "build/**",
      ".turbo/**",
      ".cache/**",
      ".next/**"
    ]
  }
}
